#!/bin/bash

# NOTE: set -o pipefail is needed to ensure that any error or failure causes the whole pipeline to fail.
# Without this specification, the CI status will provide a false sense of security by showing builds
# as succeeding in spite of errors or failures.
set -eo pipefail

echo '+++++++++++++++++++++++++++++++++++++++++++++++++++++++++'
echo 'BEGIN: updating the repository to include Docker packages'
echo '+++++++++++++++++++++++++++++++++++++++++++++++++++++++++'

# From https://docs.docker.com/engine/install/debian/
DOCKER_LIST="deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] https://download.docker.com/linux/debian \
  $(. /etc/os-release && echo "$VERSION_CODENAME") stable"
echo "DOCKER_LIST:\n $DOCKER_LIST"
echo "$DOCKER_LIST" | \
  sudo tee /etc/apt/sources.list.d/docker.list > /dev/null
wait

bin/apt-get-update
wait
echo '++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++'
echo 'FINISHED: updating the repository to include Docker packages'
echo '++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++'

