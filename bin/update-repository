#!/bin/bash

# NOTE: set -o pipefail is needed to ensure that any error or failure causes the whole pipeline to fail.
# Without this specification, the CI status will provide a false sense of security by showing builds
# as succeeding in spite of errors or failures.
set -eo pipefail

echo '+++++++++++++++++++++++++++++++++++++++++++++++++++++++++'
echo 'BEGIN: updating the repository to include Docker packages'
echo '+++++++++++++++++++++++++++++++++++++++++++++++++++++++++'

# How to get Debian version code name:
# https://unix.stackexchange.com/questions/180776/how-to-get-the-debian-codename-without-lsb-release 
VERSION_CODENAME=`dpkg --status tzdata|grep Provides|cut -f2 -d'-'`

# From https://docs.docker.com/engine/install/debian/ but with corrections
echo \
  "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] \
  https://download.docker.com/linux/debian/dists/$VERSION_CODENAME \
  stable" | \
  sudo tee /etc/apt/sources.list.d/docker.list > /dev/nullwait

echo '------------------------------------------------'
echo "Contents of /etc/apt/sources.list.d/docker.list:"
cat /etc/apt/sources.list.d/docker.list 
echo '------------------------------------------------'

bin/apt-get-update
wait
echo '++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++'
echo 'FINISHED: updating the repository to include Docker packages'
echo '++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++'

